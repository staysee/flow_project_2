<% provide(:title, 'My Events') %>

<h1>Events I'm Sharing</h1>

<% if @user == current_user %>
  <% if @user.events.any? %>
    <% @user.events.each do |event| %>

      <div>
      <%= link_to event.name, event_path(event) %>
      </div>

      <div>
      <%= link_to "[edit]", edit_event_path(event) %>
      <%= link_to "[delete]", event, method: :delete, data: { confirm: "Are you sure? Delete cannot be undone." } %>
      </div>

    <% end %>
  <% end %>
<% end %>
