<% provide(:title, 'Share Event') %>

<h1>Post an Event You're Hosting!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@user, Event.new] do |f| %>

      <div class="field form-group">
        <%= f.label :name, "Event Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :event_type %>
        <%= f.text_field :event_type, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :street %>
        <%= f.text_field :street, class: "form-control" %>
      </div>

      <div class="field form_group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="field form_group">
        <%= f.label :state %>
        <%= f.text_field :state, class: "form-control" %>
      </div>

      <div class="field form_group">
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, class: "form-control" %>
      </div>

      <%= f.submit "Share my event", class: "btn btn-primary form-control" %>

    <% end %>
  </div>
</div>

